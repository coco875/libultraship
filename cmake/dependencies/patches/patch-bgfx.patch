+        {
+            // user profile
+            options.profile = profile;
+        }
+        else
+        {
+            // set default profile for current running renderer.
+            bgfx::RendererType::Enum rendererType = bgfx::getRendererType();
+            options.profile = getProfile(rendererType, shaderType);
+        }
+
+        // include current dir
